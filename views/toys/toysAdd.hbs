<div class="container col-md-6 mt-3 mb-3 card bg-light">
   <form action="/toys/add" method="post">
      <h1 class="text text-danger text-center text-uppercase mt-3">Add new toys</h1>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Toy Name</label> 
        <input class="form-control" type="text" name="name" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Manufacturing Date</label>
         <input class="form-control" type="date" name="mfg" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Category</label><br>
         
         <select class="form-control" name="category" id="category">
               <option value="#">
                  Select category
               </option>
               {{#each category }}
                <option value={{name}}>
                     {{name}}
               </option>
               {{/each}}
            
            </select>
            <a class="btn btn-danger" href="/category/add">Add</a>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Brand</label><br>
         
         <select class="form-control" name="brand" id="brand">
               <option value="#">
                  Select brand
               </option>
               {{#each brand }}
                <option value={{name}}>
                     {{name}}
               </option>
               {{/each}}
            
            </select>
             <a class="btn btn-danger" href="/brand/add">Add</a>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Color</label>
         <input class="form-control" type="text" name="color" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Manufacture</label>
         <input class="form-control" type="text" name="manufacture" required>
      </div>
       <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Detail</label>
         <input class="form-control" type="text" name="detail" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group text-center mt-3 mb-3">
         <input class="btn btn-primary" type="submit" value="Add">
      </div>
   </form>
</div>